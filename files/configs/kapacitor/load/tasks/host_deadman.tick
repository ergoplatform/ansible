dbrp "telegraf"."autogen"

stream
    |from()
        .measurement('system')
        .groupBy('host')
    |deadman(0.0, 1m)
        .id('{{ index .Tags "host" }}')
        .message('Host {{ .ID }} is {{ if eq .Level "OK" }}ONLINE{{ else }}OFFLINE{{ end }}')
        .stateChangesOnly()
        .log('/var/log/kapacitor/host_deadman_alerts.log')
        .slack()
