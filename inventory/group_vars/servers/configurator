configurator:

  default:
    directory:
      mode: 755
      owner: root
      group: root
      state: directory
    file:
      mode: 644
      owner: root
      group: root

  fulldirs: {}

  directories:

    # Base data directory
    - dir: /data

  templates:
    telegraf:
      src: files/configs/telegraf/servers.conf.j2
      dest: /etc/telegraf/telegraf.conf
      notify: telegraf-restart
