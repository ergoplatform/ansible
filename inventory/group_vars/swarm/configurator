---

configurator:

  fulldirs:
    configs:
      src: files/configs
      dest: /data
    stacks:
      src: files/stacks
      dest: /data

  directories:

    # Base data directory
    - dir: /data

  files:

    # Copy telegraf configuration file
    - file: /etc/telegraf/telegraf.conf
      src: files/configs/telegraf/telegraf.conf
      notify: telegraf-restart
