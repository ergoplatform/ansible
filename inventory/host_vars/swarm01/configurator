---

configurator:

  directories:
    - dir: /backup
    - dir: /data

  fulldirs:
    configs:
      src: files/configs
      dest: /data
    docker-stack:
      src: files/stacks
      dest: /data

  files:
    # rsnapshot
    - file: /etc/rsnapshot.conf
      src: files/configs/rsnapshot/rsnapshot.conf
    - file: /etc/cron.d/rsnapshot
      src: files/configs/rsnapshot/rsnapshot.cron.d

    # Copy telegraf configuration file
    - file: /etc/telegraf/telegraf.conf
      src: files/configs/telegraf/telegraf.conf
      notify: telegraf-restart
