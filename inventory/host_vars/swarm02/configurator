---

configurator:

  directories:
    - dir: /data
    - dir: /data/node-info-monitor

  files:
    # Copy telegraf configuration file
    - file: /etc/telegraf/telegraf.conf
      src: files/configs/telegraf/telegraf.conf
      notify: telegraf-restart

    - file: /data/node-info-monitor/docker-compose.yml
      src: files/docker-compose/node-info-monitor/docker-compose.yml

    - file: /data/node-info-monitor/config.ini
      src: files/configs/node-info-monitor/swarm02.ini
